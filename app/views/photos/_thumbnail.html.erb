<span class='thumbnail_wrapper'>
	<% if signed_in? %>
	  <ul>
			<li>
				<%= image_tag('red_x.png', size: '20x20', class: 'destroy_photo') %>
				<%= hidden_field_tag "photos[#{thumbnail.id}][_destroy_photo]", value='false', class: 'destroy_photo_hidden_field' %>
	      <%= label_tag 'delete this photo?'%>
			</li>
			<li>
				<%= check_box_tag "photos[#{thumbnail.id}][header_photo]", true, thumbnail.header_photo, class: 'photo_index_box header_photo_checkbox' %>
				<%= label_tag 'make this a header photo for the post it was submitted with?' %>
			</li>
		  <li>
		    <%= check_box_tag "photos[#{thumbnail.id}][cover_photo]", true, thumbnail.cover_photo, class: 'photo_index_box cover_photo_checkbox' %>		
		    <%= label_tag 'make this a cover photo for the entire site?' %>
			</li>
		</ul>
	<% end %>
	<%= image_tag(build_s3_url(thumbnail.id), class: 'thumbnail') %>
</span>